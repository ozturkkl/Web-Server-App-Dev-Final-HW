@model Game
@{
    ViewBag.Title = "Delete Game";
}

<div class="list-header">
    <h1>@ViewBag.Title <span style="color: #ededed;">@Model.Name</span></h1>
</div>

<p style="font-size: 1.2rem; margin-top: 50px;">Are you sure you want to delete this game?</p>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="GameID" />

    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="List" class="btn btn-outline-secondary">Cancel</a>
    </div>
</form>
